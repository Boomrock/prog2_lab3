<UserControl x:Class="prog2_lab4.UCView.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prog2_lab4.UCView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Style="{StaticResource ButtonStyle}" Content="Проверка перевода" Command="{Binding OpenTranslationCheckCommand}"/>
            <Button Style="{StaticResource ButtonStyle}" Content="Ввод перевода" Command="{Binding OpenTranslationWordsCommand}"/>
            <Button Style="{StaticResource ButtonStyle}" Content="Ввести новые слова" Command="{Binding OpenAddNewWordsCommand}"/>

        </StackPanel>
    </Grid>
</UserControl>
