<UserControl x:Class="prog2_lab4.UCView.TranslationCheckView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prog2_lab4.UCView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button VerticalAlignment="Top" HorizontalAlignment="Left" Height="25" Width="80" Content="Назад" Command="{Binding BackToMainMenuCommand}"/>

        <StackPanel VerticalAlignment="Center">
            <Border Style="{StaticResource BorderStyle}" >
            <TextBlock Style="{StaticResource TextBlockStyle}" OverridesDefaultStyle="True"/>
            </Border>
            <Border  Style ="{StaticResource BorderStyle}">
            <TextBlock Style="{StaticResource TextBlockStyle}"/>
            </Border>
            <WrapPanel HorizontalAlignment="Center">
                <Button Style="{StaticResource ButtonStyle}" Content="Правильно"/>
                <Button Style="{StaticResource ButtonStyle}" Content="Не правильно"/>

            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
